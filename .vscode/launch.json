{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Project",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/Debug/Cpp-CMake-Template",
      "cwd": "${workspaceFolder}/build/Debug",
      "windows": {
        "type": "cppvsdbg",
        "program": "${workspaceFolder}\\build\\Debug\\Cpp-CMake-Template.exe",
        "cwd": "${workspaceFolder}\\build\\Debug",
        "console": "integratedTerminal",
      },
      "osx": {
        "externalConsole": false,
        "MIMode": "gdb",
        "miDebuggerPath": "gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],        
      },
      "args": [
        "arg1",
        "arg2",
        "arg3"
      ],
      "stopAtEntry": false,
      "environment": [],
      "preLaunchTask": "Build Project"
    }
  ]
}
